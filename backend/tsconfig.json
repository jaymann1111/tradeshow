{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./backend/dist",
    "rootDir": "./backend",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules"]
}





